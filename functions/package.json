  "engines": {
    "node": "20"
  },
  "dependencies": {
    "@genkit-ai/googleai": "^1.24.0",
    "@google-cloud/firestore": "^7.11.6",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^7.0.0",
    "genkit": "^1.24.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.2.2"
  },
  "private": true
}
