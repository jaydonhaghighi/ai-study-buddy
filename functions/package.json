{
  "name": "functions",
  "version": "1.0.0",
  "description": "Cloud Functions for AI Study Buddy with Genkit",
  "type": "module",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "serve": "npm run build && firebase emulators:start --only functions",
